<div class="container-fluid">
    <h1>rooms</h1>
        <p>
            <a href="/rooms/add" class="btn btn-primary btn-sm">add room</a>
        </p>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each rooms}}
                <tr>
                    <td>
                        <a href="/room/{{_id}}">
                            {{name}}<br />
                            {{!-- <span class="badge badge-secondary">{{}}</span> --}}
                        </a>
                    </td>
                    <td>
                        {{#if owned}}
                            <a href="/rooms/edit/{{_id}}" class="btn btn-primary btn-sm">Edit</a>
                            <a href="/rooms/delete/{{_id}}" class="btn btn-primary btn-sm">Delete</a>
                        {{/if}}
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
