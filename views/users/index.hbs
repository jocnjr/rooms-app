<div class="container-fluid">
    <h1>users</h1>
        <p>
            <a href="/users/add" class="btn btn-primary btn-sm">add user</a>
        </p>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
                <tr>
                    <td>
                        <a href="/user/{{_id}}">
                            {{fullName}}<br />
                            {{!-- <span class="badge badge-secondary">{{}}</span> --}}
                        </a>
                    </td>
                    <td>
                        {{!-- {{#if owned}} --}}
                            <a href="/users/edit/{{_id}}" class="btn btn-primary btn-sm">Edit</a>
                            <a href="/users/delete/{{_id}}" class="btn btn-primary btn-sm">Delete</a>
                        {{!-- {{/if}} --}}
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
